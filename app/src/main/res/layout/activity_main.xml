<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/tunnel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- plane part -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_aircraft_container"
        android:layout_width="200dp"
        android:layout_height="@dimen/heart_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/default_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aircraft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/aircraft" />
    </androidx.appcompat.widget.LinearLayoutCompat>



    <!-- hearts part -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_container_hearts"
        android:layout_width="@dimen/hearts_width"
        android:layout_height="@dimen/heart_height"
        android:layout_alignParentRight="false"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_heart1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_heart2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_heart3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- obstacles matrix -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/matrix_casing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_container_hearts"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="vertical">

        <!-- row # 1 -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
